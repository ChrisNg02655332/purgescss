{
  "name": "purgescss",
  "version": "1.0.1",
  "scripts": {
    "serve": "vite preview",
    "build:example": "tsc && vite build",
    "start": "concurrently --kill-others \"sass --watch scss/purgescss.scss css/purgescss.css\" \"vite\"",
    "build": "npm run build-sass && npm run build-autoprefix",
    "build-sass": "sass scss/purgescss.scss css/purgescss.css",
    "build-autoprefix": "postcss --use autoprefixer --map false --output css/purgescss.css css/purgescss.css",
    "prepare": "husky install",
    "release": "release-it"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^15.0.0",
    "@release-it/conventional-changelog": "release-it/conventional-changelog",
    "@types/node": "^16.11.10",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@vitejs/plugin-react": "^1.0.0",
    "autoprefixer": "^10.4.0",
    "commitlint": "^15.0.0",
    "concurrently": "^6.4.0",
    "husky": "^7.0.4",
    "postcss": "^8.4.4",
    "postcss-cli": "^9.0.2",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-router-dom": "6",
    "release-it": "^14.11.8",
    "sass": "^1.43.5",
    "typescript": "^4.3.2",
    "vite": "^2.6.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "license": "MIT"
}
