{
  "name": "purgescss",
  "version": "1.0.1",
  "main": "purgescss.sass",
  "unpkg": "css/purgescss.css",
  "repository": "git@github.com:ChrisNg02655332/purgescss.git",
  "author": "ChrisNg02655332 <chris.dungnguyen@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prepare": "husky install",
    "release": "release-it",
    "start": "sass --watch purgescss.scss css/purgescss.css",
    "build": "npm run build-sass && npm run build-autoprefix",
    "build-sass": "sass purgescss.scss css/purgescss.css",
    "build-autoprefix": "postcss --use autoprefixer --map false --output css/purgescss.css css/purgescss.css"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^15.0.0",
    "@release-it/conventional-changelog": "release-it/conventional-changelog",
    "autoprefixer": "^10.4.0",
    "commitlint": "^15.0.0",
    "cpx": "^1.5.0",
    "husky": "^7.0.4",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.2",
    "release-it": "^14.11.8",
    "sass": "^1.43.4"
  }
}
